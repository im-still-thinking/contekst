{
    "manifest_version": 3,
    "name": "AI Context Logger Extension",
    "version": "1.0.0",
    "description": "A Chrome extension that adds context enhancement to ChatGPT and Claude",
    "permissions": [
      "activeTab",
      "storage",
      "tabs"
    ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
    "action": {
      "default_popup": "popup.html",
      "default_title": "AI Context Logger"
    },
    "content_scripts": [
      {
        "matches": ["https://chatgpt.com/*", "https://chat.openai.com/*"],
        "js": ["chatgpt-content.js"],
        "run_at": "document_end"
      },
      {
        "matches": ["https://claude.ai/*"],
        "js": ["claude-content.js"],
        "run_at": "document_end"
      }
    ],
    "content_security_policy": {
      "extension_pages": "script-src 'self'; object-src 'self'"
    }
  }


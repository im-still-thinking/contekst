{
  "manifest_version": 3,
  "name": "AI Context Logger Extension",
  "version": "1.0.0",
  "description": "A Chrome extension that adds context enhancement to ChatGPT",
  "permissions": [
    "activeTab",
    "storage",
    "tabs"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "AI Context Logger"
  },
  "content_scripts": [
    {
      "matches": ["https://chatgpt.com/*", "https://chat.openai.com/*"],
      "js": ["./chatgpt/content.ts"],
      "run_at": "document_end"
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}

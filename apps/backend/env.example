# Server Configuration
PORT=3000
NODE_ENV=production

# JWT Secret (generate a strong secret)
JWT_SECRET=your_very_long_and_secure_jwt_secret_key_here

# MySQL Database (running in Docker on same VM)
# Use container name or localhost depending on your setup
MYSQL_URL=mysql://username:password@mysql:3306/database_name
# Alternative if using host network: mysql://username:password@localhost:3306/database_name

# Redis Cache (running in Docker on same VM)
# Use container name or localhost depending on your setup
REDIS_URL=redis://redis:6379
# Alternative if using host network: redis://localhost:6379

# OpenAI API
OPENAI_API_KEY=sk-your-openai-api-key-here

# Qdrant Vector Database (running in Docker on same VM)
# Use container name or localhost depending on your setup
QDRANT_URL=http://qdrant:6333
# Alternative if using host network: http://localhost:6333
QDRANT_API_KEY=your_qdrant_api_key
MEMORY_SIMILARITY_THRESHOLD=0.7

# Blockchain Configuration (Optional)
BLOCKCHAIN_RPC_URL=https://your-blockchain-rpc-url
MEMORY_CONTRACT_ADDRESS=0x1234567890123456789012345678901234567890
BLOCKCHAIN_PRIVATE_KEY=your_private_key_here

# Walrus Storage Configuration (Optional)
WALRUS_PRIVATE_KEY=your_walrus_private_key_here
WALRUS_NETWORK=testnet
WALRUS_STORAGE_EPOCHS=3
